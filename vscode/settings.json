{
    "terminal.integrated.shell.linux": "/bin/bash",
    "editor.detectIndentation": true,
    "editor.autoIndent": "full",
    "editor.colorDecorators": true,

    // Config for Python 3.8
    "python.pythonPath": "/usr/bin/python3.8",
    "python.venvFolders": [
        //ADD HERE VIRTUAL ENVIRONNEMENTS
    ],
        "env": {
            "PYTHONPATH": "${workspaceRoot}"
        },
        "window.zoomLevel": -1,
        "python.autoComplete.extraPaths": [
            "/usr/lib/python3.8",
            "/usr/lib/python3/dist-packages"
        ],

        "python.linting.pylintEnabled": true,
        "python.linting.pycodestyleArgs": ["--ignore=E303"],
        "editor.tokenColorCustomizations": {
            "comments":"#5bd75b",
        },
        "better-comments.multilineComments": true,
        "better-comments.highlightPlainText": false,
        "better-comments.tags": [
            {
              "tag": "TODO",
              "color": "#ffff66",
              "strikethrough": false,
              "backgroundColor": "transparent"
            },
            {
            "tag": "Note",
              "color": "#c6538c",
              "strikethrough": false,
              "backgroundColor": "transparent"
            },
            {
                "tag": "Refactor",
                  "color": "#ff1a1a",
                  "strikethrough": false,
                  "backgroundColor": "transparent"
                }
        ],
        "window.menuBarVisibility": "toggle",
        "todo-tree.tree.showScanModeButton": false,
        "todo-tree.highlights.enabled": false,
        "launch": {
            "debug": "${workspaceRoot}/test/"
        },
    // If using unittest Python framework
        "python.testing.unittestArgs": [
            "-v",
            "-s",
            "./test",
            "-p",
            "test_*.py"
        ],
        "python.testing.pytestEnabled": false,
        "python.testing.nosetestsEnabled": false,
        "python.testing.unittestEnabled": true,
        "python.jediEnabled": true,
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "[markdown]": {
        "editor.wordWrap": "on",
        "editor.quickSuggestions": false
    },
    "security.workspace.trust.untrustedFiles": "open",
    "explorer.confirmDelete": false,
    "editor.formatOnSave": true,
    "todohighlight.isEnable": true,
    "todohighlight.isCaseSensitive": true,
    "todohighlight.keywords": [
        {
            "text": "TODO:",
            "color": "black",
            "border": "1px solid #f5cd79",
            "borderRadius": "3px",
            "backgroundColor": "#f5cd79"
        }
    ],
    "todohighlight.include": [
        "**/*.js",
        "**/*.jsx",
        "**/*.ts",
        "**/*.tsx",
        "**/*.html",
        "**/*.php",
        "**/*.css",
        "**/*.scss",
        "**/*.md",
        "**/*.mmd",
        "**/*.markdown",
        "**/*.mdown"
    ]

}

